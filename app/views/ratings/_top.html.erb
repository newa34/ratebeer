<div class="col-md-3">
  <h3>Best <%= what %></h3>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>average</th>
      </tr>
    </thead>
    <tbody>
      <% items.each do |item| %>
        <tr>
          <td><%= link_to item.name, item %></td>
          <td><%= round(item.average_rating) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>