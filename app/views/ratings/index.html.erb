<h2>List of Ratings</h2>
<h3>Number of ratings: <%= @ratings.count %></h3>
<ul>
	<% @ratings.each do |rating| %>
	<li> 
		<%= rating.to_s %>
		<%= link_to 'Destroy', rating_path(rating.id), method: :delete, data: { confirm: 'Are you sure?' } %>
	 </li>
	<% end %>
</ul>

<p><%= link_to "New Rating", new_rating_path %></p>
